<div class="modal fade" id="RapidRequest" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticRapidRequestLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <h1 class="modal-title fs-5">Trasporto rapido</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body">
            <div class="d-flex d-flex-row">
               <div class="css-flex-40 ms-2">
                  <label for="rrrequest" class="form-label">Richiesta</label>
                  <input type="text" class="form-control" id="rrrequest" name="rrrequest">
               </div>
               <div class="flex-grow-1 ms-2">
                  <label for="rrtype" class="form-label">Tipo</label>
                  <select class="form-select" id="rrtype" name="rrtype">
                     <option value="1">Customizing</option>
                     <option value="2" selected>Workbench</option>
                     <option value="3">Altro</option>
                  </select>
               </div>
            </div>

            <div class="d-flex d-flex-row">
               <div class="flex-grow-1">
                  <label for="rrdescription" class="form-label">Descrizione</label>
                  <input type="text" class="form-control" id="rrdescription" name="rrdescription" maxlength="80">
               </div>
            </div>

            <div class="d-flex d-flex-row">
               <div class="flex-grow-1">
                  <label for="rrdate" class="form-label">Data</label>
                  <input type="datetime-local" class="form-control" id="rrdate" name="rrdate" value="{{data.rdate}}">
               </div>
            </div>
         </div>
         <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
               <i class="bi bi-x-square"></i>
            </button>
            <button type="button" class="btn btn-success" onclick="modalRapidSubmit(2);">
               <i class="bi bi-floppy"></i>
            </button>
         </div>
      </div>
   </div>
</div>